<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<properties resource="jdbc.properties" />
    <classPathEntry
        location="C:/Users/Administrator/.m2/repository/mysql/mysql-connector-java/5.1.40/mysql-connector-java-5.1.40.jar" />
    <context id="context1">

    <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
	<!-- <plugin type="org.mybatis.generator.plugins.CalendarPlugin" /> -->
	<plugin type="customize.plugins.MapperToDaoPlugin" />


<!--     JDBCの設定です (1) -->
        <jdbcConnection
            driverClass="${jdbc.driver}"
            connectionURL="${jdbc.url}"
            userId="${jdbc.username}"
            password="${jdbc.password}"
        />

<!--     自動生成するエンティティの設定です (2) -->
        <javaModelGenerator
            targetPackage="bootdemo.hello.model.base"
            targetProject="src/main/java/"
        />
        <sqlMapGenerator
            targetPackage="bootdemo.hello.sqlmap.base"
            targetProject="src/main/resources/"
        />
        <javaClientGenerator
            targetPackage="bootdemo.hello.dao.base"
            targetProject="src/main/java/"
            type="XMLMAPPER"
        />

<!--     生成対象のテーブルです（3) -->
		<!-- <table schema="jpbook" tableName="%" /> --> <!-- すべてのテーブル -->
        <!-- <table schema="jpbook" tableName="tbl_us%" /> -->
        <table schema="spring" tableName="%" />


    </context>
</generatorConfiguration>